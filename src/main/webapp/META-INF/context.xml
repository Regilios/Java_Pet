<Context>
    <!-- JNDI DataSource Configuration -->
    <Resource name="jdbc/MyDataSource"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="root"
              password="1234"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5433/spring_db?useUnicode=yes&amp;characterEncoding=UTF-8"/>
</Context>